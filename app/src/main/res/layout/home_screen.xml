<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    android:weightSum="20">


    <LinearLayout
        android:id="@+id/fl_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/images_home_screen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fl_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="@color/home_back"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="5dp"
            android:layout_weight="5"
            tools:ignore="NestedWeights">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imagebt_hr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_heartrate"
            android:text="Heart Rate"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Heart Rate"
            android:textColor="@color/black"
            android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="2dp"
            android:layout_weight="5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/imagebt_bp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_bloodpressure"
            android:text="Blood Pressure"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Blood Pressure"
            android:textColor="@color/black"
            android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="@color/home_back"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="5dp"
            android:layout_weight="5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imagebt_his"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="25dp"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:paddingTop="35dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_history"
                    android:text="History"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="History"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="2dp"
            android:layout_weight="5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/image_ec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="25dp"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:paddingTop="35dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_emergency_contacts"
                    android:text="Emergency contacts"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="Emergency Contacts"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
